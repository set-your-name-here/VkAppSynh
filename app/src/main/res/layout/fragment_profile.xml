<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@android:color/black"
             tools:context=".fragments.ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginStart="10sp">

        <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="100sp"
                android:layout_height="100sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@color/colorAccent"
                android:contentDescription="@string/users_profile_image_desc"/>

        <TextView
                android:id="@+id/txtUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:textColor="@color/colorTextColor"
                android:textSize="35sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/imgProfile"/>

        <TextView
                android:id="@+id/txtStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:textColor="@color/colorTextColor"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/txtUsername"
                app:layout_constraintLeft_toRightOf="@id/imgProfile"/>

        <TextView
                android:id="@+id/txtAgeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:textColor="@color/colorTextColor"
                android:textSize="20sp"
                android:text="@string/txtAgeLabel"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imgProfile"/>

        <TextView
                android:id="@+id/txtAgeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginStart="15sp"
                android:textColor="@color/colorTextColor"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/imgProfile"
                app:layout_constraintLeft_toRightOf="@id/txtAgeLabel"/>

        <TextView
                android:id="@+id/txtGenderLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtGenderLabel"
                android:textColor="@color/colorTextColor"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/txtAgeLabel"
                app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
                android:id="@+id/txtGenderValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:textColor="@color/colorTextColor"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/txtAgeLabel"
                app:layout_constraintLeft_toRightOf="@id/txtGenderLabel"/>

        <TextView
                android:id="@+id/txtCityLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtCityLabel"
                android:textColor="@color/colorTextColor"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/txtGenderLabel"
                app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
                android:id="@+id/txtCityValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:textColor="@color/colorTextColor"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/txtGenderLabel"
                app:layout_constraintLeft_toRightOf="@id/txtCityLabel"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>